{
  "name": "t3000-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "private": true,
  "description": "T3000 API, a storage of building dbs and hvac applications",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config dist/server",
    "dev": "nodemon --ext ts --exec \"npm -s run compile && NODE_ENV=development node -r dotenv/config dist/server\"",
    "clean": "rm -rf dist",
    "rename:inputs": "replace-in-file ** --configFile=replace-config.js",
    "build": "npm -s run rename:inputs && npm -s run clean && npm -s run compile",
    "compile": "swc src -d dist --config-file swcrc.json",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:db-push": "prisma db push",
    "prisma:db-pull": "prisma db pull",
    "prettier": "prettier --write src",
    "docs:dev": "vuepress dev docs --clean-cache",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/multipart": "^6.0.0",
    "@paljs/plugins": "^4.0.18",
    "@prisma/client": "^3.12.0",
    "change-case": "^4.1.2",
    "dotenv": "^16.0.0",
    "fastify": "^3.22.1",
    "flat": "^5.0.2",
    "graphql": "^16.2.0",
    "graphql-middleware": "^6.1.24",
    "graphql-scalars": "^1.17.0",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "^9.3.6",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.6",
    "pluralize": "^8.0.0",
    "sharp": "^0.30.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.144",
    "@types/node": "^17.0.10",
    "@vuepress/cli": "^2.0.0-beta.33",
    "@vuepress/plugin-docsearch": "^2.0.0-beta.33",
    "@vuepress/plugin-search": "^2.0.0-beta.33",
    "@vuepress/plugin-shiki": "^2.0.0-beta.33",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "prisma": "^3.6.0",
    "replace-in-file": "^6.3.2",
    "typescript": "^4.5.4",
    "vuepress": "^2.0.0-beta.33"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "repository": "",
  "author": "Alaa Rihan"
}
