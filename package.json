{
  "name": "t3000-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "private": true,
  "description": "T3000 API, a storage of building dbs and hvac applications",
  "scripts": {
    "start": "NODE_ENV=production node -r dotenv/config dist/server",
    "dev": "nodemon --ext ts --exec \"npm -s run compile && NODE_ENV=development node -r dotenv/config dist/server\"",
    "build": "npm -s run clean && npm -s run compile",
    "clean": "rm -rf dist",
    "compile": "swc src -d dist --config-file swcrc.json",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:db-push": "prisma db push",
    "prisma:db-pull": "prisma db pull",
    "prettier": "prettier --write src",
    "docs:dev": "vuepress dev docs --clean-cache",
    "docs:build": "vuepress build docs",
    "rename:inputs": "replace-in-file ** --configFile=replace-config.js"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/multipart": "^7.4.1",
    "@paljs/plugins": "^5.2.0",
    "@prisma/client": "^4.11.0",
    "change-case": "^4.1.2",
    "dotenv": "^16.0.3",
    "fastify": "^4.13.0",
    "flat": "^5.0.2",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-scalars": "^1.20.1",
    "jsonwebtoken": "^9.0.0",
    "mercurius": "^12.2.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.0",
    "pluralize": "^8.0.0",
    "sharp": "^0.31.3"
  },
  "devDependencies": {
    "@prisma/internals": "^4.11.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.37",
    "@types/node": "^18.14.2",    
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "replace-in-file": "^6.3.5",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "repository": "",
  "author": "Temco Controls"
}
